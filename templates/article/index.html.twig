{% extends 'base.html.twig' %}

{% block title %}LineshoP - Boutique{% endblock %}

{% block body %}
        
        <div class="container bandeauCate">
            <ul class="categories">
                <li> <a class="btn btn-sm lienCate" href="{{ path('article') }}" role="button"> All Categories </a> </li>
                {% for categ in category %}
                    <li> <a class="btn btn-sm lienCate" href="{{ path('show_cate',{'id': categ.idcategory}) }}" role="button"> {{ categ.namecategory }} </a> </li>
                {% endfor %}
            </ul>
        </div>
        
        <div class="container ">
            <div class="row col-12  ">
                {% for article in articles %}
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4 border border-dark pb-5 pt-5">
                        <div class="d-flex justify-content-center" >
                            <img src="/img/{{ article.image }}"  class="img-fluid"  id="imgArticle">
                        </div>
                    
                        <div class="d-flex justify-content-center align-items-center "  id="nom">
                            <span>{{ article.namearticle }} <span id="prixArticle">{{ article.price }}â‚¬<span> </span>
                        </div>
                        <div class="float-right" id="ajoutPanier">
                        {% if app.user %}
                            <a href="{{ path('panier_add', {'id' : article.idarticle}) }}" id="Plus" title="Ajouter au panier"><img src="/img/caddie.png"></a>
                        {% else %}
                            <a href="{{ path('app_login') }}" id="Plus" title="Ajouter au panier"><img src="/img/caddie.png"></a>
                        {% endif %}
                        </div>
                        <span class=" d-flex justify-content-center align-items-center" id="showMore">
                            <a href="{{ path('show_article',{'id': article.idarticle}) }}" id="lienShowMore" title="Cliquez pour en savoir plus">>> Show more <<</a>
                        </span>
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}
